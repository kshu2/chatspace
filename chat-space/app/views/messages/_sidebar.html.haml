.sideSpace
  .header
    %h3.header__name
      = current_user.name
      %ul.header__link
        %li.link
        =link_to new_group_path do
          = fa_icon "edit", class: "symbol"
        %li.link
          =link_to edit_user_path(current_user) do
            = fa_icon "cog", class: "symbol"

  .middler
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__id
            = group.name
          .group__message
            = group.show_last_message
